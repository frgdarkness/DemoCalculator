<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:weightSum="10"
        android:orientation="vertical"
>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="3"
                  android:weightSum="5"
                  android:orientation="vertical"
    >
        <TextView android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="2"
                  android:id="@+id/txtCalPrev"
                  android:textAlignment="textEnd"
                  android:textSize="30dp"
                  android:textColor="#6D6A6A"
                  android:singleLine="true"
                  android:gravity="center_vertical" tools:ignore="RtlCompat"/>

        <EditText android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="3"
                  android:id="@+id/edtCalNow"
                  android:textSize="50dp"
                  android:textStyle="bold"
                  android:textAlignment="textEnd"
                  android:gravity="end"

                  android:ellipsize="end"
                  android:inputType="text"

                  tools:ignore="RtlCompat"/>
    </LinearLayout>

    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
                 android:layout_weight="7"
                 android:id="@+id/frameInput"
    ></FrameLayout>



</LinearLayout>